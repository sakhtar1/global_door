<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log In" %>
  <br>
  <br>
  Don't have an account? <%= link_to(controller: 'users', action: 'new') { 'Sign Up' } %>
<% end %>
